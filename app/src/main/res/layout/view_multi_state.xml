<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ml_multi_state"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/view_multi_state_scene">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/leftViewColor" />

    <View
        android:id="@+id/view_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-16px"
        android:src="@drawable/baseline_arrow_right_56"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/leftViewColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_left_1"
        app:layout_constraintBottom_toTopOf="@id/iv_3"
        app:layout_constraintEnd_toStartOf="@id/iv_2"
        app:layout_constraintStart_toStartOf="@id/view_left"
        app:layout_constraintTop_toTopOf="@id/view_left" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_left_2"
        app:layout_constraintBottom_toTopOf="@id/iv_4"
        app:layout_constraintEnd_toEndOf="@id/view_left"
        app:layout_constraintStart_toEndOf="@id/iv_1"
        app:layout_constraintTop_toTopOf="@id/view_left" />

    <ImageView
        android:id="@+id/iv_3"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_left_3"
        app:layout_constraintBottom_toTopOf="@id/iv_5"
        app:layout_constraintEnd_toStartOf="@id/iv_4"
        app:layout_constraintStart_toStartOf="@id/view_left"
        app:layout_constraintTop_toBottomOf="@id/iv_1" />

    <ImageView
        android:id="@+id/iv_4"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_left_4"
        app:layout_constraintBottom_toTopOf="@id/iv_6"
        app:layout_constraintEnd_toEndOf="@id/view_left"
        app:layout_constraintStart_toEndOf="@id/iv_3"
        app:layout_constraintTop_toBottomOf="@id/iv_2" />

    <ImageView
        android:id="@+id/iv_5"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_left_5"
        app:layout_constraintBottom_toTopOf="@id/iv_7"
        app:layout_constraintEnd_toStartOf="@id/iv_6"
        app:layout_constraintStart_toStartOf="@id/view_left"
        app:layout_constraintTop_toBottomOf="@id/iv_3" />

    <ImageView
        android:id="@+id/iv_6"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_left_6"
        app:layout_constraintBottom_toTopOf="@id/iv_8"
        app:layout_constraintEnd_toEndOf="@id/view_left"
        app:layout_constraintStart_toEndOf="@id/iv_5"
        app:layout_constraintTop_toBottomOf="@id/iv_4" />

    <ImageView
        android:id="@+id/iv_7"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_left_7"
        app:layout_constraintBottom_toBottomOf="@id/view_left"
        app:layout_constraintEnd_toStartOf="@id/iv_8"
        app:layout_constraintStart_toStartOf="@id/view_left"
        app:layout_constraintTop_toBottomOf="@id/iv_5" />

    <ImageView
        android:id="@+id/iv_8"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_left_8"
        app:layout_constraintBottom_toBottomOf="@id/view_left"
        app:layout_constraintEnd_toEndOf="@id/view_left"
        app:layout_constraintStart_toEndOf="@id/iv_7"
        app:layout_constraintTop_toBottomOf="@id/iv_6" />

    <ImageView
        android:id="@+id/iv_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-16px"
        android:src="@drawable/baseline_arrow_drop_up_56"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/leftViewColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_bottom_1"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_1"
        app:layout_constraintBottom_toTopOf="@id/iv_bottom_5"
        app:layout_constraintEnd_toStartOf="@id/iv_bottom_2"
        app:layout_constraintStart_toStartOf="@id/view_bottom"
        app:layout_constraintTop_toTopOf="@id/view_bottom" />

    <ImageView
        android:id="@+id/iv_bottom_2"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_2"
        app:layout_constraintBottom_toTopOf="@id/iv_bottom_6"
        app:layout_constraintEnd_toStartOf="@id/iv_bottom_3"
        app:layout_constraintStart_toEndOf="@id/iv_bottom_1"
        app:layout_constraintTop_toTopOf="@id/view_bottom" />

    <ImageView
        android:id="@+id/iv_bottom_3"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_3"
        app:layout_constraintBottom_toTopOf="@id/iv_bottom_7"
        app:layout_constraintEnd_toStartOf="@id/iv_bottom_4"
        app:layout_constraintStart_toEndOf="@id/iv_bottom_2"
        app:layout_constraintTop_toTopOf="@id/view_bottom" />

    <ImageView
        android:id="@+id/iv_bottom_4"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_4"
        app:layout_constraintBottom_toTopOf="@id/iv_bottom_8"
        app:layout_constraintEnd_toEndOf="@id/view_bottom"
        app:layout_constraintStart_toEndOf="@id/iv_bottom_3"
        app:layout_constraintTop_toTopOf="@id/view_bottom" />

    <ImageView
        android:id="@+id/iv_bottom_5"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_5"
        app:layout_constraintBottom_toTopOf="@id/iv_bottom_9"
        app:layout_constraintEnd_toStartOf="@id/iv_bottom_6"
        app:layout_constraintStart_toStartOf="@id/view_bottom"
        app:layout_constraintTop_toBottomOf="@id/iv_bottom_1" />

    <ImageView
        android:id="@+id/iv_bottom_6"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_6"
        app:layout_constraintBottom_toTopOf="@id/iv_bottom_10"
        app:layout_constraintEnd_toStartOf="@id/iv_bottom_7"
        app:layout_constraintStart_toEndOf="@id/iv_bottom_5"
        app:layout_constraintTop_toBottomOf="@id/iv_bottom_2" />

    <ImageView
        android:id="@+id/iv_bottom_7"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_7"
        app:layout_constraintBottom_toTopOf="@id/iv_bottom_11"
        app:layout_constraintEnd_toStartOf="@id/iv_bottom_8"
        app:layout_constraintStart_toEndOf="@id/iv_bottom_6"
        app:layout_constraintTop_toBottomOf="@id/iv_bottom_3" />

    <ImageView
        android:id="@+id/iv_bottom_8"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_8"
        app:layout_constraintBottom_toTopOf="@id/iv_bottom_12"
        app:layout_constraintEnd_toEndOf="@id/view_bottom"
        app:layout_constraintStart_toEndOf="@id/iv_bottom_7"
        app:layout_constraintTop_toBottomOf="@id/iv_bottom_4" />

    <ImageView
        android:id="@+id/iv_bottom_9"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_9"
        app:layout_constraintBottom_toBottomOf="@id/view_bottom"
        app:layout_constraintEnd_toStartOf="@id/iv_bottom_10"
        app:layout_constraintStart_toStartOf="@id/view_bottom"
        app:layout_constraintTop_toBottomOf="@id/iv_bottom_5" />

    <ImageView
        android:id="@+id/iv_bottom_10"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_10"
        app:layout_constraintBottom_toBottomOf="@id/view_bottom"
        app:layout_constraintEnd_toStartOf="@id/iv_bottom_11"
        app:layout_constraintStart_toEndOf="@id/iv_bottom_9"
        app:layout_constraintTop_toBottomOf="@id/iv_bottom_6" />

    <ImageView
        android:id="@+id/iv_bottom_11"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_11"
        app:layout_constraintBottom_toBottomOf="@id/view_bottom"
        app:layout_constraintEnd_toStartOf="@id/iv_bottom_12"
        app:layout_constraintStart_toEndOf="@id/iv_bottom_10"
        app:layout_constraintTop_toBottomOf="@id/iv_bottom_7" />

    <ImageView
        android:id="@+id/iv_bottom_12"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@mipmap/ic_bottom_12"
        app:layout_constraintBottom_toBottomOf="@id/view_bottom"
        app:layout_constraintEnd_toEndOf="@id/view_bottom"
        app:layout_constraintStart_toEndOf="@id/iv_bottom_11"
        app:layout_constraintTop_toBottomOf="@id/iv_bottom_8" />

</androidx.constraintlayout.motion.widget.MotionLayout>